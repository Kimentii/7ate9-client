<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.yatty.sevenatenine.client">

    <uses-permission android:playerId="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:playerId="android.permission.INTERNET"/>
    <uses-permission android:playerId="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:playerId=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:playerId="android.intent.action.MAIN"/>

                <category android:playerId="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:playerId=".GameActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:playerId=".GameOverActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:playerId=".LobbyListActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:playerId=".LobbyActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:playerId=".CreateLobbyActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:playerId=".SettingsActivity"
            android:screenOrientation="portrait"/>

        <meta-data
            android:playerId="io.fabric.ApiKey"
            android:value="4105998427a115f63abdde2ae901d1a80bfe904c"/>

        <service
            android:playerId=".BackgroundMusicService"
            android:enabled="true"
            android:exported="true">
        </service>
        <service
            android:playerId=".network.NetworkService"
            android:enabled="true"
            android:exported="true">
        </service>
    </application>

</manifest>