<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yatty.sevenatenine.client.GameActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/_ll_player_cards"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_top_card_modifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="20sp"
            tools:text="+1"/>

        <TextView
            android:id="@+id/tv_top_card_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textSize="70sp"
            tools:text="7"/>
    </LinearLayout>

    <Button
        android:id="@+id/button_disconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:text="@string/action_disconnect"/>

    <TextView
        android:id="@+id/tv_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="0"
        android:textSize="30sp"/>

    <LinearLayout
        android:id="@+id/_ll_player_cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/tr_first_card_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/button_card1"
                    style="@style/ImageButtonCard"
                    android:layout_weight="1"
                    android:src="@drawable/img"
                    tools:text="1\n±2"/>

                <ImageButton
                    android:id="@+id/button_card2"
                    style="@style/ImageButtonCard"
                    android:layout_weight="1"
                    android:src="@drawable/img"
                    tools:text="1\n±2"/>

                <ImageButton
                    android:id="@+id/button_card3"
                    style="@style/ImageButtonCard"
                    android:layout_weight="1"
                    android:src="@drawable/img"
                    tools:text="1\n±2"/>

                <ImageButton
                    android:id="@+id/button_card4"
                    style="@style/ImageButtonCard"
                    android:layout_weight="1"
                    android:src="@drawable/img"
                    tools:text="1\n±2"/>

                <ImageButton
                    android:id="@+id/button_card5"
                    style="@style/ImageButtonCard"
                    android:layout_weight="1"
                    android:src="@drawable/img"
                    tools:text="1\n±2"/>
            </TableRow>

            <TableRow
                android:id="@+id/tr_second_card_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/button_card6"
                    style="@style/ImageButtonCard"
                    android:layout_weight="1"
                    tools:text="1\n±2"/>

                <ImageButton
                    android:id="@+id/button_card7"
                    style="@style/ImageButtonCard"
                    android:layout_weight="1"
                    tools:text="1\n±2"/>

                <ImageButton
                    android:id="@+id/button_card8"
                    style="@style/ImageButtonCard"
                    android:layout_weight="1"
                    tools:text="1\n±2"/>

                <ImageButton
                    android:id="@+id/button_card9"
                    style="@style/ImageButtonCard"
                    android:layout_weight="1"
                    tools:text="1\n±2"/>

                <ImageButton
                    android:id="@+id/button_card10"
                    style="@style/ImageButtonCard"
                    android:layout_weight="1"
                    tools:text="1\n±2"/>
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/button_get_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/action_get_card"/>
    </LinearLayout>

</RelativeLayout>
