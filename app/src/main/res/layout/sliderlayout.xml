<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_adjust_music_volume"
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:layout_height="wrap_content"
        android:text="Adjust background music volume"
        style="@style/TextStyleLarge"/>

    <SeekBar
        android:id="@+id/sb_music_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_adjust_effects_volume"
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:layout_height="wrap_content"
        android:text="Adjust effects volume"
        style="@style/TextStyleLarge"/>

    <SeekBar
        android:id="@+id/sb_effects_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>