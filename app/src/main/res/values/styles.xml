<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActivityStyle" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="TextStyleSmall" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyleLarge" parent="android:TextAppearance.Large">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ImageButtonCard" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
</resources>
