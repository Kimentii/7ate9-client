<resources>

    <!-- Base application theme. -->
    <style playerId="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item playerId="colorPrimary">@color/colorPrimary</item>
        <item playerId="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item playerId="colorAccent">@color/colorAccent</item>
    </style>

    <style playerId="TextStyleSmall" parent="android:TextAppearance.Small">
        <item playerId="android:textColor">@color/black</item>
        <item playerId="android:textStyle">bold</item>
    </style>

    <style playerId="TextStyleMedium" parent="android:TextAppearance.Medium">
        <item playerId="android:textColor">@color/black</item>
    </style>

    <style playerId="TextStyleMediumBold" parent="android:TextAppearance.Medium">
        <item playerId="android:textColor">@color/black</item>
        <item playerId="android:textStyle">bold</item>
    </style>

    <style playerId="TextStyleLarge" parent="android:TextAppearance.Large">
        <item playerId="android:textColor">@color/black</item>
    </style>

    <style playerId="TextStyleLargeBold" parent="android:TextAppearance.Large">
        <item playerId="android:textColor">@color/black</item>
        <item playerId="android:textStyle">bold</item>
    </style>

    <style playerId="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item playerId="android:textAllCaps">false</item>
    </style>

    <style playerId="ImageButtonStyleCard" parent="Base.Widget.AppCompat.ImageButton">
        <item playerId="android:layout_width">62dp</item>
        <item playerId="android:layout_height">90dp</item>
        <item playerId="android:layout_margin">5dp</item>
        <item playerId="android:layout_weight">1</item>
        <item playerId="android:scaleType">fitXY</item>
        <item playerId="android:background">@drawable/shape_game_card</item>
        <item playerId="android:src">@drawable/r1</item>
    </style>

    <style playerId="ImageButtonStyleCardHorizontal" parent="Base.Widget.AppCompat.ImageButton">
        <item playerId="android:layout_width">90dp</item>
        <item playerId="android:layout_height">62dp</item>
        <item playerId="android:layout_margin">5dp</item>

        <item playerId="android:scaleType">fitXY</item>
        <item playerId="android:src">@drawable/shirt_horizontal</item>
    </style>
</resources>
